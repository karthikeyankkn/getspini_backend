
<div class="col-md-offset-3 col-md-6 well well-xs">
	<div class="col-md-12 margin-tb">
		<%= image_tag ( "#{@property_deal.banner_url}") %>
	</div>
	<div class="row margin-tb">
		<div class="col-md-6">
		<%= image_tag ( "#{@property_deal.offer_img_url}") %>
		</div>
		<div class="col-md-6">
			<h4><%= @property_deal.title %></h4>
			<pre><%= @property_deal.offer_details %></pre>
		</div>
	</div>
	
	<div class="col-md-12">
		<p>
			<h4>About</h4>
			<%= @property_deal.about %>
		</p>
		<p>
			<h4>Address</h4>
			<%= @property_deal.address %>
		</p>
		<p>
			<h4>Description</h4>
			<%= @property_deal.description %>
		</p>
		<p>
			<h4>Terms</h4>
			<%= @property_deal.terms %>
		</p>
		<p>
			<h4>Seo Url</h4>
			<%= @property_deal.seo_url %>
		</p>
	</div>
</div>
