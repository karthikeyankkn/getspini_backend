<div class="col-md-offset-3 col-md-6 well well-xs">
  <h1 class="text-center">Create new Lead</h1>
  <%= form_for @lead, url: {action: "create"}, html: {class: "nifty_form"} do |f| %>
  <div class="row" style="padding:5px 18px;">
    <div class="">
      <div class="form-group">
        <label for="title">Name:</label>
        <%= f.text_field :name, class:'form-control', placeholder:'Enter Name',required:true  %>
      </div>
    </div>
    <div class="">
      <div class="form-group">
        <label for="title">Phone Number:</label>
        <%= f.text_field :phone_number, class:'form-control', placeholder:'Enter Phone Number',required:true  %>
      </div>
    </div>
    <div class="">
      <div class="form-group">
        <label for="title">Email:</label>
        <%= f.text_field :email, class:'form-control', placeholder:'Enter email' %>
      </div>
    </div>
    <div class="">
      <div class="form-group">
        <label for="title">TITLE:</label>
        <%= f.text_field :city, class:'form-control', placeholder:'Enter email', value:'Chennai' %>
      </div>
    </div>
    <div class="">
      <div class="form-group">
        <label for="title">TITLE:</label>
        <%= f.text_field :category, class:'form-control', placeholder:'Enter email', value:'Loans' %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12 box text-center">
      <%= f.submit "Submit",class:'btn btn-danger'  %>
    </div>
  </div>
  <!-- </form> --> 
  <% end %>
</div>